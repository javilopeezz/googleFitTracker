{% extends 'admin/base.html.twig' %}

{% block stylesheets %}

    {{ parent() }}

{% endblock %}

{% block javascripts %}

    {{ parent() }}

{% endblock %}

{% block body %}

    <div class="app">
        <div id="main" style="margin-left: 0px;height: 90vh;display: flex;align-content: center;justify-content: center;align-items: center;">
            <header class="mb-3">
                <a href="#" class="burger-btn d-block d-xl-none">
                    <i class="bi bi-justify fs-3"></i>
                </a>
            </header>

            <div class="page-heading">
                <div class="page-title">
                    <div class="row">
                        <div class="col-12 col-md-6 order-md-1 order-last">
                            <h3>Admin Dashboard Login</h3>
                            <p class="text-subtitle text-muted">Accede al menú de administración</p>
                        </div>
                    </div>
                </div>

                <section id="basic-horizontal-layouts">
                    <div class="row match-height" style="display: flex;justify-content: center;width: 1000px;">
                        <div class="col-md-6 col-12" style="width: 1000px;">
                            <div class="card">
                                <div class="card-content">
                                    <div class="card-body">
                                        <form action="{{ path('admin_LoginAdmin') }}" method="post">
                                            <div class="row">

                                                <div class="col-12 d-flex">
                                                    <div class="form-group">
                                                        <label for="username">Username:</label>
                                                        <input type="text" id="username" name="_username" class="form-control" style="width: 930px;"/>
                                                    </div>
                                                </div>

                                                <div class="col-12 d-flex">
                                                    <div class="form-group">
                                                        <label for="password">Password:</label>
                                                        <input type="password" id="password" name="_password" class="form-control" style="width: 930px;"/>
                                                    </div>
                                                </div>

                                                <div class="col-12 d-flex">
                                                    <button type="submit" class="btn btn-primary me-1 mb-1">Login</button>
                                                </div>

                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>

                {% if error %}
                    <div>
                        {{ error.messageKey|trans(error.messageData, 'security') }}
                    </div>
                {% endif %}

            </div>
        </div>
    </div>

{% endblock %}
